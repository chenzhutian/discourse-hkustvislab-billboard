{{#if showBillBoard }}
<div id="billboard">
	<h3>The one with most publications vs You</h3>
	<table>
		<tr>
			<td>{{targetUser.username}} vs You</td>
			<td>{{whos-online-avatar user=targetUser}}</td>
			<td>{{whos-online-avatar user=user}}</td>
		</tr>
		{{#each summaryTableRows as |row|}}
		<tr>
			<td>{{row.key}}</td>
			<td>{{row.targetValue}}</td>
			<td>{{row.value}}</td>
		</tr>
		{{/each}}
	</table>
</div>
{{/if}}